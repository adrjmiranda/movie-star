{
	"name": "adriano/movie-star",
	"description": "A system that allows people to input content about movies and rate content input by other users.",
	"type": "project",
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"MovieStar\\": "src/"
		},
		"files": [
			"helpers/config.php",
			"helpers/env.php",
			"helpers/path.php",
			"helpers/style.php",
			"helpers/logger.php",
			"helpers/messages.php",
			"helpers/inputdata.php",
			"helpers/string.php",
			"helpers/debug.php"
		]
	},
	"scripts": {
		"serve": "php -S localhost:8000 -t public"
	},
	"authors": [
		{
			"name": "Adriano Miranda",
			"email": "adrjmiranda@gmail.com"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"catfan/medoo": "^2.2",
		"twig/twig": "^3.0",
		"vlucas/phpdotenv": "^5.6",
		"slim/slim": "4.*",
		"slim/psr7": "^1.7",
		"monolog/monolog": "^3.9",
		"respect/validation": "^2.4",
		"filp/whoops": "^2.18"
	},
	"config": {
		"process-timeout": 0
	},
	"require-dev": {
		"symfony/var-dumper": "^7.2"
	}
}
